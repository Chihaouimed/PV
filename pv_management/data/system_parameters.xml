<odoo>
    <data noupdate="1">
        <record id="openai_api_key_param" model="ir.config_parameter">
            <field name="key">pv_management.openai_api_key</field>
            <field name="value">api key</field>
        </record>
    <!-- Configuration du cache -->
        <record id="ai_cache_duration_param" model="ir.config_parameter">
            <field name="key">pv_management.ai_cache_duration</field>
            <field name="value">3600</field> <!-- 1 heure en secondes -->
        </record>

        <!-- Niveau de logging -->
        <record id="ai_debug_mode_param" model="ir.config_parameter">
            <field name="key">pv_management.ai_debug_mode</field>
            <field name="value">False</field>
        </record>
    </data>
</odoo>